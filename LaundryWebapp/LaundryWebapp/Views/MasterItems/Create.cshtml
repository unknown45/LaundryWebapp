@model LaundryWebapp.DataSource.MasterItem

@{
    ViewBag.Title = "Buat Item Baru";
}

    <div class="text-center">
        <h2>@ViewBag.Title</h2>
    </div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-offset-4 col-md-12">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { placeholder = "Nama Item", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { placeholder = "Deskripsi", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { placeholder = "Durasi", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { placeholder = "Harga", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @*<div class="col-md-offset-4">
            <div class="col-md-1">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsSubscribe)
                    @Html.ValidationMessageFor(model => model.IsSubscribe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-5">
                <label class="control-label">Status Langganan</label>
            </div>
        </div>*@
        <div class="col-md-offset-4 col-md-10">
                @Html.EditorFor(model => model.IsSubscribe, new { type = "checkbox", @class="custom-control-input" })
                @Html.ValidationMessageFor(model => model.IsSubscribe, "", new { @class = "text-danger" })
            
            <label class="custom-control-label" for="customCheck">
                Menu Langganan
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-10">
            <input type="submit" value="Buat" class="btn btn-primary btn-user btn-block" />
        </div>
    </div>
    <div class="text-center">
        @Html.ActionLink("Kembali ke Daftar Item", "Index")
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
