@model IEnumerable<LaundryWebapp.DataSource.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                No. Transaksi
            </th>
            <th>
                Tgl Transaksi
            </th>
            <th>
                Nama Pelanggan
            </th>
            <th>
                Menu Cucian
            </th>
            <th>
                Potongan Harga
            </th>
            <th>
                Berat (.kg)
            </th>
            <th>
                Total Harga
            </th>
            <th>
                Estimasi Selesai
            </th>
            <th>
                Status Cucian
            </th>
            <th>
                Status Pembayaran
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterCustomer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MasterItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscountPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimationClear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
